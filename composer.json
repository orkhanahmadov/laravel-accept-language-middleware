{
    "name": "orkhanahmadov/laravel-accept-language-middleware",
    "description": "Laravel middleware for setting application locale based on HTTP Accept-Language header",
    "keywords": [
        "orkhanahmadov",
        "accept-language",
        "laravel",
        "laravel middleware"
    ],
    "homepage": "https://github.com/orkhanahmadov/laravel-accept-language-middleware",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Orkhan Ahmadov",
            "email": "ahmadov90@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^11.0|^12.0",
        "illuminate/http": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "phpunit/phpunit": "^10.5|^11.5.3"
    },
    "autoload": {
        "psr-4": {
            "Orkhanahmadov\\LaravelAcceptLanguageMiddleware\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Orkhanahmadov\\LaravelAcceptLanguageMiddleware\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
